<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Money Sprouts{% endblock %}</title>
    <base href="/"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {% if app.environment == 'dev' %}
            <link rel="stylesheet" href="{{ asset('build/styles.css') }}">
        {% else %}
            <link rel="stylesheet" href="{{ asset('build/styles.' ~ asset_version ~ '.css') }}">
        {% endif %}
    {% endblock %}

    {% block javascripts %}
        {% if app.environment == 'dev' %}
            <script src="{{ asset('build/runtime.js') }}" defer></script>
            <script src="{{ asset('build/polyfills.js') }}" defer></script>
            <script src="{{ asset('build/vendor.js') }}" defer></script>
            <script src="{{ asset('build/main.js') }}" defer></script>
        {% else %}
            <script src="{{ asset('build/runtime.' ~ asset_version ~ '.js') }}" defer></script>
            <script src="{{ asset('build/polyfills.' ~ asset_version ~ '.js') }}" defer></script>
            <script src="{{ asset('build/vendor.' ~ asset_version ~ '.js') }}" defer></script>
            <script src="{{ asset('build/main.' ~ asset_version ~ '.js') }}" defer></script>
        {% endif %}
    {% endblock %}
</head>
<body>
{% block body %}{% endblock %}
</body>
</html>
